{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "outputDirectory": "frontend/dist",
  "version": 2,
  
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server.js"
    },
    {
      "source": "/manifest.json",
      "destination": "/server.js"
    },
    {
      "source": "/health",
      "destination": "/server.js"
    },
    {
      "source": "/admin/(.*)",
      "destination": "/server.js"
    },
    {
      "source": "/:language(\\w+)/manifest.json",
      "destination": "/server.js"
    },
    {
      "source": "/:language(\\w+)/catalog/(.*)",
      "destination": "/server.js"
    },
    {
      "source": "/:language(\\w+)/meta/(.*)",
      "destination": "/server.js"
    },
    {
      "source": "/catalog/(.*)",
      "destination": "/server.js"
    },
    {
      "source": "/meta/(.*)",
      "destination": "/server.js"
    }
  ]
}